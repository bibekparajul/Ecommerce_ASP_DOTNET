@using EcomProj.Model
@model ShoppingCart

<form method="post">
  <div class="container mt-5">
    <div class="card">
      <div class="card-header bg-primary text-light">
        <div class="row">
          <div class="col-md-6">
            <h1 class="text-white">@Model.Product.Name</h1>
          </div>
          <div class="col-md-6 text-end">
      @*      <span class="badge bg-info">@Model.Product.Category.Name</span>
            <span class="badge bg-warning">@Model.Product.SubCategory.Name</span>*@
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="container">
          <div class="row">
            <div class="col-lg-4 text-center">
              <img src="@Model.Product.Image" width="100%" class="rounded" />
            </div>
            <div class="col-lg-8">
              <h5 class="text-muted pb-2">List Price: <strike>@Model.Product.FixedPrice.ToString("c")</strike></h5>
              <div class="row text-center">
                <div class="col-6 bg-secondary border-bottom">
                  <div>Quantity</div>
                </div>
                <div class="col-6 bg-secondary border-bottom">
                  <div>Discount Price</div>
                </div>
              </div>
              <div class="row text-center" style="color: maroon; font-weight: bold">
                <div class="col-6 bg-secondary">
                  <div>@Model.Product.Quantity</div>
                </div>
                <div class="col-6 bg-secondary">
                  <div>@Model.Product.DiscountPrice.ToString("c")</div>
                </div>
              </div>

              <div class="row">
                <div class="col-10 text-primary"><h4>Count</h4></div>
                <div class="col-10"><input asp-for="Count" class="form-control" /></div>
              </div>
              <div class="row pl-2">
                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-md-6 pb-1">
            <a class="btn btn-success form-control" style="height: 50px;" asp-action="Index">Back to Home</a>
          </div>
          <div class="col-md-6 pb-1">
            <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height: 50px;">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
